<h1><%= @cat.name %></h1>
<table>
  <tr>
    <td>
      Cat attribute
    </td>
    <td>
      Value
    </td>
  </tr>
  <tr>
    <td>
      Color
    </td>
    <td>
      <%= @cat.color %>
    </td>
  </tr>
  <tr>
    <td>
      Gender
    </td>
    <td>
      <%= @cat.sex %>
    </td>
  </tr>
  <tr>
    <td>
      Age in years
    </td>
    <td>
      <%= @cat.age %>
    </td>
    <tr>
      <td>
        Description
      </td>
      <td>
        <%= @cat.description %>
      </td>
    </tr>
  </tr>
</table>

<h2>Current requests</h2>
  <ul>
    <% @requests.each do |request| %>
      <li> <%= request.start_date %> through <%= request.end_date %> status: <%= request.status %></li>
    <% end %>
  </ul>
