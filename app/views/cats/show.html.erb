<h2><%= @cat.name %></h2>
<table>
  <tr>
    <td>
      Cat attribute
    </td>
    <td>
      Value
    </td>
  </tr>
  <tr>
    <td>
      Color
    </td>
    <td>
      <%= @cat.color %>
    </td>
  </tr>
  <tr>
    <td>
      Gender
    </td>
    <td>
      <%= @cat.sex %>
    </td>
  </tr>
  <tr>
    <td>
      Age in years
    </td>
    <td>
      <%= @cat.age %>
    </td>
  </tr>
  <tr>
    <td>
      Description
    </td>
    <td>
      <%= @cat.description %>
    </td>
  </tr>
  <tr>
    <td>
      Owner
    </td>
    <td>
      <%= @cat.owner.username %>
    </td>
  </tr>
</table>

<h3>Current requests</h3>
  <ul>
    <% @requests.each do |request| %>
      <li> <%= request.start_date %> through <%= request.end_date %> status: <%= request.status %>
        <% if request.pending? %>
          <br />
          <form action="<%= approve_cat_rental_request_url(request) %>" method="post">
            <input type="hidden" name="_method" value="patch">
            <button>Approve</button>
          </form>
          <form action="<%= deny_cat_rental_request_url(request) %>" method="post">
            <input type="hidden" name="_method" value="patch">
            <button>Deny</button>
          </form>
        <% end %>
      </li>
    <% end %>
  </ul>
