<h1>Rent-a-cat</h1>
<form action="<%= cat_rental_requests_url %>" method="post">
  <label>Cat
    <select name="cat_rental_request[cat_id]" value="<%= @request.cat_id %>">
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
  </label><br />
  <label>Select a start date
    <input type="date" name="cat_rental_request[start_date]" value="<%= @request.start_date %>">
  </label><br />
  <label>Select a end date
    <input type="date" name="cat_rental_request[end_date]" value="<%= @request.end_date %>">
  </label><br />
  <input type="submit" value="Request">
</form>
